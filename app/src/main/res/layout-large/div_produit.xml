<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/AppColor"
    android:layout_marginBottom="2dp"
    android:paddingTop="5dp"
    android:paddingLeft="20dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView

            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo"
            android:gravity="left|center"
            android:lineSpacingExtra="-11sp"
            android:textSize="22sp"
            android:textColor="@color/Black"
            android:text="Produit"/>

        <TextView
            android:id="@+id/nom_pr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo"
            android:gravity="left|center"
            android:lineSpacingExtra="-13sp"
            android:textSize="22sp"
            android:textColor="@color/White"
            android:text="Benguergoura Mohamed Riadh"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView

            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo"
            android:gravity="left|center"
            android:lineSpacingExtra="-11sp"
            android:textSize="20sp"
            android:textColor="@color/Black"
            android:text="@string/div_pr_codePr"/>

        <TextView
            android:id="@+id/codebar_pr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo"
            android:gravity="left|center"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:text="PR0001"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-3dp"
        android:orientation="horizontal">
        <TextView

            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo"
            android:gravity="left|center"
            android:lineSpacingExtra="-11sp"
            android:textSize="20sp"
            android:textColor="@color/Black"
            android:text="@string/faireVente_scanner_qt"/>

        <TextView
            android:id="@+id/qt_pr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo"
            android:gravity="left|center"
            android:visibility="visible"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:text="200212"/>

    </LinearLayout>








    <TextView
        android:id="@+id/prixVentte_pr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo"
        android:layout_marginTop="-8dp"
        android:visibility="gone"

        android:textSize="15sp"
        android:textColor="@color/White"
        android:text="prix:25632158952 DA"/>



</LinearLayout>