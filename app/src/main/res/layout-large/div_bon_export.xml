<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="@color/AppColor"
    android:paddingTop="0dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:id="@+id/divBon_export"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bon_etat"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="@font/cairo"
            android:background="@color/Green"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/White"
            android:text="EXPORTÃ‰"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="22sp"

                android:text="@string/rglmt_labClt"/>

            <TextView
                android:id="@+id/clt_bon_export"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="22sp"
                android:textColor="@color/White"
                android:text="Benguergoura oussama benguergouraoussama CRMA INETERMEC "/>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="22sp"
                android:text="@string/aff_vente_bon_nom"/>

            <TextView
                android:id="@+id/code_bon_export"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="22sp"
                android:textColor="@color/White"
                android:text="5230 "/>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="22sp"
                android:text="@string/aff_vente_bon_date"/>

            <TextView
                android:id="@+id/date_bon_export"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="22sp"
                android:textColor="@color/White"
                android:text="2018-05-05 15:30 "/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="22sp"

                android:text="@string/faireVente_panierTotal"/>

            <TextView
                android:id="@+id/total_bon_export"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="22sp"
                android:textColor="@color/White"
                android:text="250 000 369 00.00 DA"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/div_remise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="20sp"
                android:text="@string/vente_remise"/>

            <TextView
                android:id="@+id/remise_bon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:textSize="23sp"
                android:textColor="@color/White"
                android:text="30 %"/>


        </LinearLayout>

    </LinearLayout>


    <!-- Div d imprimante -->
    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/butt_back_degrade"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/imp_ico"/>
        <TextView
            android:id="@+id/imp_export"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/cairo"
            android:layout_marginTop="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="19sp"
            android:textColor="@color/Black"
            android:text="Imprimer"/>

    </LinearLayout>



</LinearLayout>