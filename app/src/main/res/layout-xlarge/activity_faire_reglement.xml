<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:orientation="vertical"
    tools:context="com.ls.celtica.lsdelivryls.Reglements.FaireReglement">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/AppColor">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/cairo"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="32sp"
            android:text="@string/rglmt_titre"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/div_solde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo"
                android:textSize="33sp"
                android:textColor="@color/Black"
                android:text="Solde: "/>

            <TextView
                android:id="@+id/solde_selectesdClt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="-10dp"
                android:fontFamily="@font/cairo"
                android:textSize="33sp"
                android:textColor="@color/AppColor"
                android:text="100.000 00 00 00 00 DA"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/cairo"
            android:textSize="37sp"
            android:textAlignment="center"
            android:textColor="@color/AppColor"
            android:text="@string/rglmt_labClt"/>
        <TextView
            android:id="@+id/rglmt_clt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:background="@drawable/bg_butt2"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textSize="37sp"
            android:text="@string/rglmt_selectClt"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo"
            android:textSize="37sp"
            android:textAlignment="center"
            android:textColor="@color/AppColor"
            android:text="@string/rglmt_labMontant"/>
        <EditText
            android:id="@+id/rglmt_montant"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bg_butt2"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:inputType="numberSigned|numberDecimal"
            android:hint="@string/rglmt_selectMontant"
            android:textColorHint="@color/Gray"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textSize="37sp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo"
            android:visibility="visible"
            android:textSize="37sp"
            android:textAlignment="center"
            android:textColor="@color/AppColor"
            android:text="@string/rglmt_labMode"/>
        <Spinner
            android:id="@+id/mode_rglmt"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bg_butt2"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="visible"
            android:popupBackground="@color/AppColor"
            android:textColorHint="@color/Black"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/valider_rglmt"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/bg_butt"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="37sp"
            android:text="@string/add_clt_valider"/>
    </LinearLayout>
</LinearLayout>
