<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context="com.ls.celtica.lsdelivryls.Clients.UnClient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal"
            android:background="@color/AppColor"
            >

            <TextView
                android:id="@+id/clt_titre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="80dp"
                android:fontFamily="@font/cairo"
                android:lineSpacingExtra="-25sp"
                android:gravity="center"
                android:text="Benguergoura OussamaBenguergoura OussamaBenguergoura Oussama"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="26sp" />

            <ImageView
                android:id="@+id/clt_location"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:padding="11dp"
                android:layout_gravity="right"
                android:src="@drawable/map_ic"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="5"
                android:layout_marginLeft="20dp"

                android:src="@drawable/tel"/>
            <TextView
                android:id="@+id/num_clt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/cairo"
                android:gravity="center"
                android:textAlignment="textStart"
                android:textSize="30sp"
                android:textColor="@color/AppColor"
                android:text="0552.22.03.20"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="5"
                android:layout_marginLeft="20dp"

                android:src="@drawable/mark"/>
            <TextView
                android:id="@+id/gps_clt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/cairo"
                android:gravity="center"
                android:textAlignment="textStart"
                android:textSize="30sp"
                android:textColor="@color/AppColor"
                android:text="38.25655865/0255885.325"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="5"
                android:layout_marginLeft="20dp"

                android:src="@drawable/adr"/>
            <TextView
                android:id="@+id/adr_clt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_weight="1"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/cairo"
                android:gravity="center"
                android:textAlignment="textStart"
                android:textSize="30sp"
                android:lineSpacingExtra="-10dp"
                android:textColor="@color/AppColor"
                android:text="city mohamed meriane num 30 zabana blida"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="5"
                android:layout_marginLeft="20dp"

                android:src="@drawable/money"/>
            <TextView
                android:id="@+id/solde_clt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_weight="1"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/cairo"
                android:gravity="center"
                android:textAlignment="textStart"
                android:textSize="30sp"
                android:lineSpacingExtra="-10dp"
                android:textColor="@color/AppColor"
                android:text="-58962 DA"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="5"
                android:layout_marginLeft="20dp"

                android:src="@drawable/type"/>
            <TextView
                android:id="@+id/type_clt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_weight="1"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/cairo"
                android:gravity="center"
                android:textAlignment="textStart"
                android:textSize="30sp"
                android:lineSpacingExtra="-10dp"
                android:textColor="@color/AppColor"
                android:text="Grossiste"/>


        </LinearLayout>
        <TextView
            android:id="@+id/aff_clt_modifGPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/cairo"
            android:textSize="35sp"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:text="@string/aff_clt_modifGPS"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/clt_faireVente_butt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="190dp"
        android:layout_marginRight="190dp"
        android:background="@drawable/bg_butt"
        android:orientation="horizontal"
        android:layout_gravity="bottom">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="3"
            android:src="@drawable/add_pr"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="-8dp"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:textAlignment="textStart"
            android:fontFamily="@font/cairo"
            android:textColor="@color/White"
            android:textSize="30sp"
            android:text="@string/clt_faireVente_butt"/>

    </LinearLayout>

</FrameLayout>
