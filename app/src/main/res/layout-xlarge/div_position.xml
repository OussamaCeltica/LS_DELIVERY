<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:padding="20dp"
    android:id="@+id/body"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/cairo"
        android:textSize="32sp"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:text="@string/add_clt_selectLoc" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/add_pos_actuel"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_butt"
            android:gravity="center"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:textSize="29sp"
            android:text="@string/add_clt_selectLocActuel"/>

        <TextView
            android:id="@+id/add_pos_map"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_butt"
            android:gravity="center"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:textSize="29sp"
            android:text="@string/add_clt_selectLocMap"/>

    </LinearLayout>
</LinearLayout>