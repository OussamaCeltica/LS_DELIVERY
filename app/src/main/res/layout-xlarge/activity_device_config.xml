<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg2"
    android:gravity="center"
    tools:context="com.ls.celtica.lsdelivryls.DeviceConfig">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo"
        android:textColor="@color/AppColor"
        android:textAlignment="center"
        android:textSize="40sp"
        android:text="@string/deviceconfig_label"/>
    <EditText
        android:id="@+id/deviceconfig_id"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_butt2"
        android:fontFamily="@font/cairo"
        android:hint="@string/deviceconfig_hint"
        android:textColorHint="@color/Gray"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:textSize="37sp"
        />

    <TextView
        android:id="@+id/deviceconfig_valider"
        android:layout_width="300dp"
        android:layout_height="86dp"
        android:background="@drawable/bg_butt"
       android:gravity="center"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/cairo"
        android:textSize="37sp"
        android:textColor="@color/White"
        android:text="@string/add_clt_valider"/>
</LinearLayout>
